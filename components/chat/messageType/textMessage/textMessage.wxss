/* components/messageType/text/text.wxss */

.text-container {
  max-width: 566rpx;
  display: flex;
}

.text-right {
  flex-direction: row-reverse;
}

.text-wrapper {
  padding: 6px 12px;
  margin: 4px 16px;
  background: rgba(255, 255, 255, 1);
  word-break: break-all;
}

.text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 46rpx;
}

.self-text-bg {
  background: rgb(178, 211, 255);
}
