/* pages/container/container.wxss */
.call {
  width: 100%;
  height: 100%;
}
.movable-area {
  width: 100vw;
  height: 100vh;
}
.small-view {
  position: fixed;
  top: 134rpx;
  right: 0;
  width: 400rpx;
  height: 225rpx;
}
.full-view {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}
.hidden-view {
  transform: translate(0, 0) scale3d(0, 0, 0);
}
.movable-call-view {
  position: fixed;
  z-index: 999;
  width: 136rpx;
  height: 170rpx;
  background:rgba(255,255,255,1);
  box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.06);
  border-radius: 4px;
  border: 1px solid rgba(209,209,209,1);
}
.movable-call-view-wrapper {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(15,175,150,1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.video-icon {
  width: 80rpx;
  height: 80rpx;
}
.call-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 100;
/*  navigation bar 99*/
}
.call-hidden-view {
  top: -9999px;
  left: -9999px;
}